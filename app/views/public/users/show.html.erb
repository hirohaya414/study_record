<!--サイドバー index,showページ共通-->

<%= link_to 'ユーザー一覧', public_users_path, class: 'btn btn-outline-success' %>


<%= link_to 'プロフィール編集', edit_public_user_path(@user), class: 'btn btn-outline-success' %>

<div class="row">
	<div class="col-md-4">
		<div class="form-set">
			<h4>プロフィール</h4>
			<table class="table table-responsive">
				<tr>
					<th>名前</th>
					<td><%= @user.name %></td>
					<%= @user.email %>
				</tr>
				<tr>
					<th>コメント</th>
					<td></td>
				</tr>
				<tr>
					<th>達成したリスト数</th>
					<td></td>
				</tr>
				<tr>
					<th>お気に入り投稿数</th>
					<td></td>
				</tr>
				<tr>
					<th>投稿数</th>
					<td></td>
				</tr>
				<tr>
					<th>フォローリスト</th>
					<td>
					<!--フォロー、フォロワーの数が０だった場合、リンク先に飛べないように設定-->
					<% if @user.followings.count != 0 %>
						<%= link_to @user.followings.count, follows_public_user_path %>
					<% else %>
						<%= @user.followings.count %>
					<% end %>
					</td>
				</tr>
				<tr>
					<th>フォロワーリスト</th>
					<td>
					<% if @user.followers.count != 0 %>
						<%= link_to @user.followers.count, followers_public_user_path %>
					<% else %>
						<%= @user.followers.count %>
					<% end %>
					</td>
				</tr>
				<!--追加-->
				<tr>
					<% if @user != current_user %>
						<% if @user.followed_by?(current_user) %>
						<th>フォロー済: </th>
						<td><%= link_to public_user_relationship_path(@user.id), method: :delete do %>
							  <i class="far fa-thumbs-up fa-lg">
							  	<%= @user.followings.count %>
							  </i>
							<% end %>
						</td>
					<% else %>
						<th>フォローする: </th>
						<td><%= link_to public_user_relationships_path(@user.id), method: :post do %>
						  	  <i class="far fa-thumbs-up fa-lg">
						  	  	<%= @user.followers.count %>
						  	  </i>
						  	<% end %>
						</td>
						<% end %>
					<% end %>
				</tr>
				<tr>
					<th>設定</th>
					<td><%= link_to '設定', edit_public_user_path(@user) %></td>
				</tr>
			</table>
		</div>
	</div>


<!--todolist完了で受け取った値をグラフで表示する-->
	<div class="col-md-8">
		<div class="text-right">
			<%= link_to 'todoリスト設定ページ', public_todolists_path, class: 'btn btn-outline-success' %>
		</div>
		<div class="form-set">
			<h3>ユーザーグラフ</h3>
			<p>テスト: コントローラから値を渡している</p>
			<%= pie_chart @data %>

			<p>テスト6</p>
			<%= pie_chart @chart,
				id: 'data-chart',
                 width: '300px',
                 height: '300px',
                 colors: [['#adff2f'],['#ffd700'],['#00bfff']] %>


			<% if params[:todolist_id] %>
			<%= @finish_list.id %>
			<% end %>
		</div>


	</div>


</div>




