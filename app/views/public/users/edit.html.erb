<div class="row">
  <div class="col-md-8 offset-1">
    <h3>
      会員情報編集
      <i class="fas fa-user-cog"></i>
    </h3>
    <div class="text-right">
      <%= link_to "マイページの確認", user_path(@user), class: "btn btn-outline-info" %>
    </div>
    <div class="form-set mt-3">

      <div class="form-horizontal">
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', obj: @user %>

        <div class="form-group">
          <%= attachment_image_tag(@user, :profile_image, :fill, 200, 200,fallback: 'no_image.jpg', size: '50x50') %><hr />
          <%= f.attachment_field :profile_image %><hr />
        </div>

        <div class="form-group">
          <%= f.label :"ユーザー名" %>
          <%= f.text_field :name, class: 'form-control' %><hr />
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: 'form-control' %><hr />
        </div>

        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: 'form-control' %><hr />
        </div>

        <div class="form-group">
          パスワード変更設定<hr />
          <%= link_to "パスワード変更", user_users_password_path(@user), class: "btn btn-outline-success btn-block" %><hr />
        </div>

        <div class="actions">
          <%= f.submit "変更を保存する", class: "btn btn-outline-primary btn-block" %>
        </div>
        <div class="button">
          <%= link_to "戻る", user_path(@user), class: "btn btn-outline-dark" %>
          <!--かんたんログインユーザーには表示しない-->
          <% if current_user.email != 'guest@test.com' %>
            <%= link_to "退会確認ページへ", users_hide_path(@user), method: :put, data: { confirm: '本当に退会しますか？'}, class: 'btn btn-outline-danger' %>
          <% end %>
          <!--かんたんログインユーザーには表示しない-->
          </div>
        </div>

      <% end %>
      </div>
    </div>
  </div>

</div>


