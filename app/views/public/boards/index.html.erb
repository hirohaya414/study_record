<div class="row">
	<div class="col-md-3">
	<h4 class="board-head">掲示板一覧
		<%= link_to "+", new_public_board_path, class: "btn btn-info", style: "border-radius: 50%" %>
	</h4>
		<div class="card card-default">
			<div class="card-heading thead">
				<h5 class="text-center">掲示板内検索</h5>
			</div>
			<table class="table">
			   <!--タイトルと本文の検索-->
			   <!--orでつなげることで複数のカラムが検索できる-->
			   <%= search_form_for(@search, url: public_boards_path, html: {class: 'form-inline'}) do |f| %>
			   	<%#= f.label :title_or_body_cont, '検索はこちら' %>
			   <p><%= f.search_field :title_or_body_cont, class: 'searchform', placeholder: '検索はこちら' %>
			   </p>
					<i class="fas fa-search"><%= f.submit %></i>
				<% end %>
				<tbody>
				<tr>
					<td><%= link_to public_boards_path do %>
						<span>全記事(<%= Board.all.count %>)</span>
						<% end %>
					</td>
				</tr>
				<% @tags.each do |tag| %>
					<% if tag.is_void == false %>
					<tr>
						<td class="tag-name">
						<%= link_to public_boards_path(tag_id: tag.id) do  %>
							<span><%= tag.name %>(<%= tag.board_tags.count %>)</span>
						<% end %>
						</td>
					</tr>
					<% end %>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>


	<div class="col-md-9">
		<div class="board-title">
			<p class="text-right">
				<%= link_to '新規作成フォーム +', new_public_board_path, class: "btn btn-outline-dark" %>
			</p>
		</div>
		<% if !params[:tag_id] %>
		<!--入子構造-->
		<div class="col-xs-6">
			<!--新着投稿一覧　3件-->
			<div class="card card-default">
				<div class="card-heading thead">
					<h5 class="text-center">新着投稿</h5>
				</div>
				<%= render 'index', boards: @new_boards %>
			</div>
		</div>
		<div class="col-xs-6">
			<!--人気投稿一覧-->
			<div class="card card-default">
				<div class="card-heading thead">
					<h5 class="text-center">人気投稿</h5>
				</div>
				<%= render 'index', boards: @new_boards %>
			</div>
		</div>
		<% end %>



		<div class="card card-default">
			<div class="card-header">
				<h5 class="text-center">掲示板一覧</h5>
			</div>
			<div class="card-body">
				<table class="table table-hover">
					<thead>
						<th>タイトル</th>
						<th>タグ</th>
						<th>投稿日時</th>
						<th>詳細</th>
					</thead>
					<tbody>
					<% @boards.each do |board| %>
						<tr>
							<td>
							<%= link_to board.title, public_board_path(board) %>
							</td>
							<td>
							<% board.board_tags.each do |board_tag| %>
								<span class="badge badge-secondary">
									<%= board_tag.tag.name %>
								</span>
							<% end %>
							</td>
							<td><%= l board.created_at %></td>
							<td><%= link_to '詳細', public_board_path(board), class: 'btn btn-outline-info' %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>

	<%= paginate @boards %>
	</div>
</div>

