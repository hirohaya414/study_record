<div class="form-horizontal">
<%= form_with model:board do |f| %>
	<%= render 'shared/error_messages', obj: board %>
	<div class="form-group mt-4">
		<%= f.label :タイトル %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group mt-5">
		<%= f.label :本文 %>
		<%= f.text_area :body, class: 'form-control', rows: 16 %>
	</div>
	<div class="form-group">
		<%= f.attachment_field :image, placeholder: 'プロフィール画像', class: 'board-image-form' %>
	</div>
	<div class="form-group">
    <span>タグ</span>
	    <%= f.collection_check_boxes(:tag_ids, Tag.where(is_void: false), :id, :name) do |tag| %>
	      <div class="form-check">
	        <%= tag.label class: 'form-check-label' do %>
	          <%= tag.check_box class: 'form-check-input' %>
	          <%= tag.text %>
	        <% end %>
	      </div>
	    <% end %>
  	</div>
	<div class="actions">
		<%= f.submit '投稿する', class: 'btn btn-outline-info form-control' %>
	</div>
	<%= link_to '戻る', boards_path, class: 'btn btn-outline-secondary' %>
<% end %>
</div>


