<div class="card-box">
	<table class="table">
		<thead>
			<tr>
				<th>タイトル</th>
				<th>カテゴリー</th>
				<td>投稿日時</td>
				<td>詳細</td>
			</tr>
		</thead>
		<tbody>
		<% boards.each do |board| %>
			<tr>
				<td>
				  <%= link_to board.title, public_board_path(board) %>
				</td>
				<td>
				<% board.board_tags.each do |board_tag| %>
					<span class="badge badge-secondary">
						<%= board_tag.tag.name %>
					</span>
				<% end %>
				</td>
				<td class="small"><%= l board.created_at %></td>
				<td>
				<% if user_signed_in? %>
	  				<% if board.board_liked_by?(current_user) %>
						いいね<%= board.board_likes.count %>
					<% end %>
				<% end %>
				</td>
				<td><%= link_to '詳細', public_board_path(board), class: 'btn btn-outline-info' %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>

