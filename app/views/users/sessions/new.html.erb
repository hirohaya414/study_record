<div style="display: flex;">
  <div style="flex: 1;">
    <h2 class="text-center mb-5">学習の記録をカタチに</h2>
      <%= image_tag 'image00.jpg', :width => '550', :height => '400', :alt => 'top-image' %>
  </div>
  <div style="flex: 1;">
    <%= flash[:alert] %>
      <h3><i class="fa fa-user"></i>
        ログインページ
      </h3>
        <div class="form-horizontal ml-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <i class="far fa-envelope"></i>
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'メールアドレス入力', class: 'form-control' %>
            </div>

            <div class="form-group">
              <i class="fa fa-lock"></i>
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード入力', class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: 'btn btn-outline-info form-control' %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
      </div>
  </div>
</div>


