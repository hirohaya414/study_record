<div class="row">
  <div class="col-xs-6 col-xs-offset-1">

    <h2>管理者ログイン</h2>

    <div class="form-horizontal">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


         <div class="form-froup">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",placeholder:"メールアドレス入力" %>
        </div>

         <div class="form-froup">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control",placeholder:"パスワード入力" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-default btn-primary" %>
        </div>
      <% end %>

      <%= render "admins/shared/links" %>
    </div>

  </div>
</div>