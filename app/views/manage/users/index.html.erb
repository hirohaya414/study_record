<div class="row">
	<div class="col-md-2">
		会員検索
	</div>
	<div class="col-md-10 offset-md-2">
	<table class="table table-hover table-responsive">
		<thead class="thead">
			<tr>
				<th>会員NO.</th>
				<th>名前</th>
				<th>メールアドレス</th>
				<th>登録日</th>
				<th>ステータス</th>
				<th>詳細</th>
			</tr>

		</thead>

		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= link_to user.name, manage_user_path(user) %></td>
				<td><%= user.email %></td>
				<td><%= l user.created_at %></td>

				<!--ステータスの変更をできるようにすること-->
				<td><%if user.is_deleted == false %>
                      <span class="badge badge-pill badge-primary">有効会員</span>
              		<% else %>
                  	  <span class="badge badge-pill badge-danger">退会済み</span>
              		<% end %>
              	</td>
              	<td><%= link_to '詳細', manage_user_path(user), class: 'btn btn-outline-primary' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @users %>
	</div>
</div>
