<div class="row">

	<table class="table table-hover">
		<thead>
			<tr>
				<th>会員NO.</th>
				<th>名前</th>
				<th>メールアドレス</th>
				<th>登録日</th>
				<th>ステータス</th>
				<th>詳細</th>
			</tr>

		</thead>

		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= link_to user.name, manage_user_path(user) %></td>
				<td><%= user.email %></td>
				<td><%= l user.created_at %></td>

				<!--ステータスの変更をできるようにすること-->
				<td><%if user.is_deleted == false %>
                      <span>有効会員</span>
              		<% else %>
                  	  <span>退会済み</span>
              		<% end %>
              	</td>
              	<td><%= link_to '詳細', manage_user_path(user), class: 'btn btn-outline-info' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<!--ページャ実装-->

<%= paginate @users %>