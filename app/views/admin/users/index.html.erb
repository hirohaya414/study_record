<div class="row">

	<table class="table">
		<thead>
			<tr>
				<th>会員NO.</th>
				<th>名前</th>
				<th>メールアドレス</th>
				<th>登録日</th>
				<th>ステータス</th>
			</tr>

		</thead>

		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= link_to user.name, admin_user_path(user) %></td>
				<td><%= user.email %></td>
				<td><%= l user.created_at %></td>

				<!--ステータスの変更をできるようにすること-->
				<td><%= user.is_deleted %></td>

			</tr>
			<% end %>

		</tbody>

	</table>
				<!--ページャ実装-->
			<%= paginate @users %>


</div>